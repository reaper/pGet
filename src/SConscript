env = Environment()
opt = env.Clone(CC='clang', CXX='clang++', CCFLAGS=['-pthread', '-O3', '-Wall'], CXXFLAGS="-std=c++11")

# Build the program
curlP = opt.Program (target = "curlP", source = [Glob('**/*.cpp'), 'curlP.cpp'], LIBS = ['curl', 'PocoNet', 'PocoFoundation'])

# Install the binary into a folder
opt.Install('../bin', curlP)
